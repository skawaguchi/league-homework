{
    "extends": [
        "airbnb-base"
    ],
    "plugins": [
        "jest"
    ],
    "rules": {
        "arrow-parens": [2, "always"],
        "comma-dangle": [2, "never"],
        "complexity": [2, 6],
        "function-paren-newline": 0,
        "import/prefer-default-export": 0,
        "indent": [2, 4],
        "jest/no-disabled-tests": 2,
        "jest/no-focused-tests": 2,
        "jest/no-identical-title": 2,
        "jest/valid-expect": 2,
        "no-param-reassign": 0,
        "no-plusplus": [2, {
            "allowForLoopAfterthoughts": true
        }],
        "no-console": [2, {
            "allow": ["warn", "error"]
        }]
    },
    "env": {
        "jest/globals": true
    }
}
